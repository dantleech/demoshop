{% extends "@checkout/layout.twig" %}
{% import "@checkout/checkout/_macros.twig" as checkout %}

{% block title %}
    <h3>Voucher</h3>
{% endblock %}

{% block content %}
    <div class="row columns">
        {{ form_start(voucherForm, { attr: { id: 'voucher-form' }}) }}

            <div class="callout">
                <ul class="no-bullet">
                    {{ form_rest(voucherForm) }}
                </ul>
            </div>

            <div class="callout">
                <div class="row align-right">
                    <div class="small-12 medium-6 large-4 xlarge-3 columns">
                        <a href="{{ previousStepUrl }}" class="button expanded __no-margin-bottom">{{ 'general.back.button' | trans }}</a>
                    </div>
                    <div class="small-12 medium-6 large-4 xlarge-3 columns">
                        <button type="submit" class="button success expanded __no-margin-bottom">Goto Address</button>
                    </div>
                </div>
            </div>

        {{ form_end(voucherForm) }}
    </div>

{% endblock %}
